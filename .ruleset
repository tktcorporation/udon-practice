<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="Unity Project Rules" Description="Code analysis rules for Unity C# projects" ToolsVersion="16.0">
  <Rules AnalyzerId="Microsoft.Analyzers.ManagedCodeAnalysis" RuleNamespace="Microsoft.Rules.Managed">
    <!-- Performance rules -->
    <Rule Id="CA1802" Action="Warning" /> <!-- Use literals where appropriate -->
    <Rule Id="CA1805" Action="Warning" /> <!-- Do not initialize unnecessarily -->
    <Rule Id="CA1806" Action="Warning" /> <!-- Do not ignore method results -->
    
    <!-- Design rules -->
    <Rule Id="CA1000" Action="Warning" /> <!-- Do not declare static members on generic types -->
    <Rule Id="CA1010" Action="Warning" /> <!-- Collections should implement generic interface -->
    <Rule Id="CA1051" Action="None" />    <!-- Do not declare visible instance fields (Unity uses public fields) -->
    
    <!-- Globalization rules -->
    <Rule Id="CA1303" Action="None" />    <!-- Do not pass literals as localized parameters -->
    <Rule Id="CA1305" Action="None" />    <!-- Specify IFormatProvider -->
    <Rule Id="CA1307" Action="None" />    <!-- Specify StringComparison -->
  </Rules>
  
  <Rules AnalyzerId="StyleCop.Analyzers" RuleNamespace="StyleCop.Analyzers">
    <!-- Documentation rules - disabled for Unity projects -->
    <Rule Id="SA1600" Action="None" />    <!-- Elements should be documented -->
    <Rule Id="SA1633" Action="None" />    <!-- File should have header -->
    
    <!-- Ordering rules -->
    <Rule Id="SA1200" Action="Warning" /> <!-- Using directives should be placed correctly -->
    <Rule Id="SA1210" Action="Warning" /> <!-- Using directives should be ordered alphabetically -->
    
    <!-- Naming rules -->
    <Rule Id="SA1300" Action="Warning" /> <!-- Element should begin with upper-case letter -->
    <Rule Id="SA1303" Action="Warning" /> <!-- Const field names should begin with upper-case letter -->
    
    <!-- Maintainability rules -->
    <Rule Id="SA1400" Action="Warning" /> <!-- Access modifier should be declared -->
    <Rule Id="SA1401" Action="None" />    <!-- Fields should be private (Unity uses public fields) -->
    
    <!-- Layout rules -->
    <Rule Id="SA1500" Action="Warning" /> <!-- Braces for multi-line statements should not share line -->
    <Rule Id="SA1501" Action="Warning" /> <!-- Statement should not be on a single line -->
  </Rules>
  
  <Rules AnalyzerId="SonarAnalyzer.CSharp" RuleNamespace="SonarAnalyzer.CSharp">
    <!-- Code smell detection -->
    <Rule Id="S1125" Action="Warning" />  <!-- Boolean literals should not be redundant -->
    <Rule Id="S1135" Action="Warning" />  <!-- Track uses of "TODO" tags -->
    <Rule Id="S1186" Action="Warning" />  <!-- Methods should not be empty -->
    
    <!-- Bug detection -->
    <Rule Id="S2259" Action="Warning" />  <!-- Null pointers should not be dereferenced -->
    <Rule Id="S3903" Action="Warning" />  <!-- Types should be defined in named namespaces -->
    
    <!-- Security -->
    <Rule Id="S2068" Action="Error" />    <!-- Credentials should not be hard-coded -->
    
    <!-- Unity-specific suppressions -->
    <Rule Id="S2933" Action="None" />     <!-- Fields that are only assigned in the constructor should be readonly (Unity SerializeField) -->
    <Rule Id="S1104" Action="None" />     <!-- Fields should not have public accessibility (Unity uses public fields) -->
  </Rules>
  
  <!-- Unity-specific analyzer rules -->
  <Rules AnalyzerId="Microsoft.Unity.Analyzers" RuleNamespace="Microsoft.Unity.Analyzers">
    <Rule Id="UNT0001" Action="Warning" /> <!-- Empty Unity message -->
    <Rule Id="UNT0002" Action="Warning" /> <!-- Inefficient tag comparison -->
    <Rule Id="UNT0003" Action="Warning" /> <!-- Usage of non generic GetComponent -->
    <Rule Id="UNT0004" Action="Warning" /> <!-- Time.fixedDeltaTime used with Update -->
    <Rule Id="UNT0005" Action="Warning" /> <!-- Time.deltaTime used with FixedUpdate -->
    <Rule Id="UNT0006" Action="Warning" /> <!-- Incorrect message signature -->
    <Rule Id="UNT0007" Action="Warning" /> <!-- Null coalescing on Unity objects -->
    <Rule Id="UNT0008" Action="Warning" /> <!-- Null propagation on Unity objects -->
    <Rule Id="UNT0009" Action="Warning" /> <!-- Missing static constructor -->
    <Rule Id="UNT0010" Action="Warning" /> <!-- Component instance creation -->
    <Rule Id="UNT0011" Action="Warning" /> <!-- ScriptableObject instance creation -->
  </Rules>
</RuleSet>